<!doctype html>
<html>
    <head>
        <title>Gallery</title>
        <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
        <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
        <style>
            body {
                padding-top:80px; word-wrap:break-word;
            }
            canvas {
                text-align: center;
                margin: 0 auto;
                display: block;
                /* width: 300px;
                height: 400px; */
            }
            video {
                /* text-align: center; */
                margin: 0 auto;
                display: block;
                width: 400px;
                height: 500px;
            }
            .center {
                margin: 0 auto;
            }
            .booth {
                width: 500px;
                height: 700px;
                border-radius: 15px;
                background-color: #ccc;
                border: 10px solid #ddd;
                margin: 0 auto;
                padding-left: 50px;
                padding-right: 50px;
            }
            .main {
                width: 80%;
                margin: auto;
                overflow: scroll;
                height: 70%;
            }
            .image {
                width: 400px;
                height: 300px;
                display: block;
                margin-left: auto;
                margin-right: auto;
            }
            .comment {
                width: 400px;
                height: 50px;
            }
            .scroll {
                overflow: scroll;
                background-color: #fff;
                height: 100px;
                width: 400px;
            }
            .comment_box {
                margin: auto;
                width: 80%;
                height: 40px;
                background-color: #fff;
            }
            .comment_submit {
                width: 400px;
            }
            .choice {
                margin: auto;
                width: 30%;
                border: 3px solid grey;
                padding: 10px;
                text-align: center;
            }
            #likeb, #deleteb {
                display: inline-block;
                text-align: center;
            }
        </style>
    </head>
    <body>
    <div class="container">

        <div class="page-header text-center">
            <h1><span class="fa fa-anchor"></span> Gallery Page</h1>
            <a href="/profile" class="btn btn-default btn-sm">Home</a>
            <a href="/account" class="btn btn-default btn-sm">Account</a>
            <a href="/logout" class="btn btn-default btn-sm">Logout</a>
        </div>
        <div class="main">
                <% for(var i = 0; i < camagru.length; i++) { %>
                    <% if ((i >= (id * 5 - 5) && i < (id * 5)) || id == 0) {%>
                        <div class="booth">
                            <h5 style="text-align: center"><%= camagru[i].img.username %></h5>
                            <img class="image" src="<%= camagru[i].img.data %>"><br/>
                            <div style="text-align: center">
                                <form method="post" action="/like/<%= camagru[i]._id %>" enctype='multipart/form-data'>
                                    <button type="submit" id="likeb" name="like_button" class="btn btn-default btn-xs">Like <%= camagru[i].img.like %></button>
                                </form>
                            </div>
                            <div style="text-align: center">
                                <form action="/delete/<%= camagru[i]._id %>" method="post" enctype="multipart/form-data">
                                    <button type="submit" id="deleteb" name="delete_button" class="btn btn-default btn-xs">Delete</button><br/>
                                </form>
                            </div>
                            <div class="scroll">
                                <% for(j = 0; j < comments.length; j++) {%>
                                    <div class="comment_box">
                                        <% if (comments[j].comment.imageid == camagru[i]._id) { %>
                                            <h6><%= comments[j].comment.username %> : <%= comments[j].comment.comment %></h6>
                                        <% } %>
                                    </div>
                                <% } %>
                            </div>
                            <form action="/comment/<%= camagru[i]._id %>" method="post" enctype="multipart/form-data">
                                <textarea type="textarea" id="comment" name="comment" class="comment"></textarea>
                                <input type="hidden" name="image_id" value="<%= camagru[i]._id %>">
                                <button type="submit" name="comment_submit" id="comment_submit" class="btn btn-default comment_submit">Comment</button>
                            </form>
                            <br/>
                            <br/>
                            
                        </div>
                        &nbsp;
                    <% } %>
                 <% } %>
                 &nbsp;
                    <div class="choice">
                        <a href="/gallery/1">1</a>
                        <a href="/gallery/2">2</a>
                        <a href="/gallery/3">3</a>
                        <a href="/gallery/4">4</a>
                        <a href="/gallery/5">5</a>
                    </div>
        </div>
    </div>
    </body>
    <script>

    </script>
</html>